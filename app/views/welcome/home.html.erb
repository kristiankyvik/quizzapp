            <p><div class="bat"><%= link_to "PLAY", user_quiz_path(quizz.user, quizz) %> </div>
          </div>
          <div><img alt="image" class="img-responsive" src=<%= quizz.questions.first.image_url %>> </div>
        </div>
      </div>
    <% end %>     
