      <div class="col-lg-8 col-lg-offset-2">
        <h2>create a new quiz</h2> 
      </div>
      <div class="divider" id="section1"></div>
      <div class="col-sm-10 col-sm-offset-1">        
        <div class="form-large">
          <%= form_for([@user, @quiz]) do |f| %>
          <div class="form-group">
            <%= f.text_field :title, class: "form-control", :placeholder => "enter your quiz title to start", :autofocus => true %>
            </div>
            <div class="col-lg-8 col-lg-offset-2">
              <h2>or edit your existing quizzes</h2> 
            </div>
            <div class="row">
              <div class="col-md-2 col-md-offset-5">
                <div class="form-group">
                    <%= f.submit "Start", class: "btn my-hidden btn-primary pull-right" %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
