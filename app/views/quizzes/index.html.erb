

<style type="text/css">
  
  .form-large{
      font-size: 35px;
  }

  .form-large .control-label{
      padding-top: 20px;
      padding-bottom: 20px;
      line-height: normal;
  }

  .form-large input, .form-large  button{
      font-size: 35px;
      padding: 15px;
      height: auto;
      line-height: normal;
      margin-bottom: -30px;
  }

  .my-hidden{
     display: none;

  }
</style>


<div class="divider" id="section1"></div>
  
<div class="container">
  <div class="col-sm-10 col-sm-offset-1">        
       <div class="form-large">
            <%= form_for([@user, @quiz]) do |f| %>

              <div class="form-group">
                <%= f.text_field :title, class: "form-control", :placeholder => "choose your title", :autofocus => true %>
                </div>
              <div class="row">
    <div class="col-md-2 col-md-offset-5">
              <div class="form-group">
                <%= f.submit "Start", class: "btn my-hidden btn-primary pull-right" %>
              </div>
    </div>
</div>
            <% end %>
        </div>

  </div>
</div>

<div class="divider"></div>
  
<section class="bg-3" id="section4">
  <div class="col-sm-6 col-sm-offset-3 text-center"><h2 style="padding:20px;"> Here are your quizzes: </h2></div>
</section>


<div class="continer bg-4">
  <div class="row">

    <% @quizzes.each do |quiz| %>

     <div class="col-sm-4 col-xs-6">
      
        <div class="panel panel-default">
          <div><img src="//placehold.it/360X250/565656/eee" class="img-responsive"></div>
          <div class="panel-body">
            <h2><%= quiz.title %></h2>
            <div > <%= link_to "PLAY", user_quiz_path(current_user, quiz) %> </div>
             <div > <%= link_to "EDIT", user_quiz_questions_path(current_user, quiz) %> </div>
          </div>
        </div><!--/panel-->

      </div><!--/col-->

    <% end %>
      
  </div><!--/row-->
</div><!--/container-->


<% content_for :head do %>
  <script type="text/javascript">
    <%= render :partial => "shared/special" %>
  </script>
<% end %>