

<style type="text/css">
  
  .form-large{
      font-size: 35px;
  }

  .form-large .control-label{
      padding-top: 20px;
      padding-bottom: 20px;
      line-height: normal;
  }

  .form-large input, .form-large  button{
      font-size: 35px;
      padding: 15px;
      height: auto;
      line-height: normal;
      margin-bottom: -30px;
  }

  .my-hidden{
     display: none;
  }
</style>

<div id="headerwrap">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <h3>The new app is for making quizzes</h3>
        <h1>music quizzes, that is</h1>
        <h5>Yeah</h5>
        <h5>rock and roll</h5>       
      </div>
      <div class="divider" id="section1"></div>
      <div class="col-sm-10 col-sm-offset-1">        
        <div class="form-large">
          <%= form_for([@user, @quiz]) do |f| %>
          <div class="form-group">
            <%= f.text_field :title, class: "form-control", :placeholder => "enter your quiz title to start", :autofocus => true %>
            </div>
            <div class="row">
              <div class="col-md-2 col-md-offset-5">
                <div class="form-group">
                    <%= f.submit "Start", class: "btn my-hidden btn-primary pull-right" %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      <!-- <div class="col-lg-8 col-lg-offset-2 himg">
        <img src="assets/img/browser.png" class="img-responsive">
      </div> -->
    </div><!-- /row -->
  </div> <!-- /container -->
</div><!-- /headerwrap -->
  


<div class="container bg-4">
  <div class="row">
    <% @quizzes.each do |quiz| %>
    <div class="col-sm-3 col-xs-6">
        <div class="panel panel-default">
          <div><img alt="image" class="img-responsive" src=<%= quiz.questions.first.image_url %>></a></div>
          <div class="panel-body">
            <h4><%= quiz.title %></h4>
            <div > <%= link_to "PLAY", user_quiz_path(current_user, quiz) %> </div>
             <div > <%= link_to "EDIT", user_quiz_questions_path(current_user, quiz) %> </div>
          </div>
        </div><!--/panel-->

      </div><!--/col-->

    <% end %>
      
  </div><!--/row-->
</div><!--/container-->


<% content_for :head do %>
  <script type="text/javascript">
    <%= render :partial => "shared/special" %>
  </script>
<% end %>