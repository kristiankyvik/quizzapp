var quiztitle ;
var currentquestion = 0,
    score = 0,
    cansubmit = true,
    quiz,
    picked,
    first_time = true,
    timer;


    $(document).ready(function(){
      var audio=document.getElementById('audio');
      var progress=document.querySelector("progress");

    function htmlEncode(value) {
        return $(document.createElement('div')).text(value).html();
    }

    var loadAudio = function (link){
      $.ajax({
          url: "https://api.spotify.com/v1/tracks/"+link,
          type: 'GET',
          crossDomain : true,
          xhrFields: {
          },
          success: function(data) {
            audio.setAttribute('src', data.preview_url);
            audio.addEventListener('canplaythrough', function() {
              audio.play();
              audio.volume=0.3;
              if (currentquestion < quiz.length && first_time == true) {
                console.log("timer set" + link);
                clearAlert();
                timer = window.setTimeout(showTimeoutBox, 8000); //e aqui el problema<1!!!!
              }
            }, false);
              }
          })
    };

    function setupLayout () {
      $('<h1/>').text(quiztitle).appendTo('#guapa');
      $('<p/>').addClass('questionCounterBanner').attr('id', 'questionCounterBanner').text('Question 1 of ' + quiz.length).appendTo('#frame');
      $('<p/>').addClass('question').attr('id', 'question').text(quiz[0]['question_title']).appendTo('#frame');
      $('<img/>').addClass('question-image').attr('id', 'question-image').attr('src', quiz[0]['image']).attr('alt', htmlEncode(quiz[0]['question'])).appendTo('#frame');
      $('<p/>').addClass('explanation').attr('id', 'explanation').html('&nbsp;').appendTo('#frame');
      $('<ul/>').attr('id', 'choice-block').appendTo('#frame');
      addChoices(quiz[0]['choices']);
      $('<div/>').addClass('choice-box').attr('id', 'nextButton').text('NextQuestion').appendTo('#frame').hide();
      setupButtons();   
    }

    function addChoices(choices) { 
      $('#choice-block').empty();
      for (var i = 0; i < choices.length; i++) {
          $('<li/>').addClass('choice choice-box').attr('data-index', i).text(choices[i].title).appendTo('#choice-block');
      }
    }

    function setupButtons() {
      $('.choice').on('click', function () {
          clearAlert();
          first_time = false;
          choice = $(this).attr('data-index');
          if (quiz[currentquestion]['choices'][choice].correct) {
            showCorrectBox()
            score++;
          } else {
            showTimeoutBox();
          }
      })
    }

    function showTimeoutBox() {
      $('#loose_sound')[0].play();
      $('#timeup_modal').modal({show:true})
      cansubmit = false;
      $("#next-question-modal-fail").click(function(){
          console.log("clickkkk modall")
          $('.choice').off('click');
          $(this).off('click');
          upCounter();
      });
    }

    function showCorrectBox() {
      $('#win_sound')[0].play();
      $('#correct_modal').modal({show:true})
      $("#next-question-modal-succes").click(function(){
          console.log("clickkkk modall")
          $('.choice').off('click');
          $(this).off('click');
          upCounter();
      });
    }


    function clearAlert() {
      window.clearTimeout(timer);
      console.log("alert cleared!!!");
    }

    function upCounter() {
        currentquestion++;
        console.log(currentquestion);
        $("#nextButton").hide();
            if (currentquestion == quiz.length) {
                endQuiz();
            } else {     
                nextQuestion();
            }
    }

    function nextQuestion() {
        console.log("nect question called");
        cansubmit = true;
        first_time = true;
        $('#explanation').empty();
        loadAudio(quiz[currentquestion]['song']);
        console.log("aduio loaded called")
        $('#question').text(quiz[currentquestion]['question']);
        $('#questionCounterBanner').text('Question ' + Number(currentquestion + 1) + ' of ' + quiz.length);  
        $('#question-image').attr('src', quiz[currentquestion]['image']).attr('alt', htmlEncode(quiz[currentquestion]['question']));
        addChoices(quiz[currentquestion]['choices']);
        setupButtons();
    }

    function endQuiz() {
        $('#explanation').empty();
        $('#question').empty();
        $('#choice-block').empty();
        $('#question').text("You got " + score + " out of " + quiz.length + " correct.");
        $('h2').text(Math.round(score / quiz.length * 100) + '%').insertAfter('#question');
        document.querySelector("progress").remove();
    }

    var setProgress=function(audio, progress){
      var ratio=125/audio.duration;
      var progressValue=Math.floor(ratio*audio.currentTime);
      progress.value=progressValue;
    }

    audio.addEventListener('timeupdate',function(evt){
      setProgress(audio,progress);      
    })


    function init() {
        $.ajax({
              url: location.pathname + $("#quiz-id").text() +".json",
              type: 'GET',
              crossDomain : true,
              xhrFields: {
              withCredentials: true
          },
              success: function(data) {
              }
          }).done(function(data) {
            quiztitle = Object.keys(data);
            quiz = data[Object.keys(data)];
            console.log(quiz)
            setupLayout();
            loadAudio(quiz[0].song);
          });

    }

    init();
});
