    #frame {
        height:500px;
        width: 100%;
    }
    .box {
        width: 100%;
        height: 35%;
        float: left;
    }

    .box:nth-of-type(1) {
        background: #2980b9;
    }

    .box:nth-of-type(2) {
        background: #e74c3c;
        border-left: 1px solid #f00;
    }

    .box:nth-of-type(3) {
        background: #27ae60;
        border-top: 1px solid #f00;
    }

    .box:nth-of-type(4) {
        background: #e67e22;
        border-top: 1px solid #f00;
        border-left: 1px solid #f00;
    }


